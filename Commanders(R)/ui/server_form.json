{
	"namespace": "server_form",
	"third_party_server_screen": {
		"modifications": [{
			"array_name": "controls",
			"operation": "insert_back",
			"value": {
				"select_job@select_job.main_screen": {
					"bindings": [{
						"binding_name": "#title_text",
						"binding_type": "global"
					}, {
						"binding_type": "view",
						"source_property_name": "(#title_text = 'commanders.ui.select_job')",
						"target_property_name": "#visible"
					}]
				}
			}
		}, {
			"array_name": "controls",
			"operation": "insert_back",
			"value": {
				"common@common.base_screen": {
					"bindings": [{
						"binding_name": "#title_text",
						"binding_type": "global"
					}, {
						"binding_type": "view",
						"source_property_name": "(not (#title_text = 'commanders.ui.select_job'))",
						"target_property_name": "#visible"
					}],
					"$screen_content": "server_form.main_screen_content",
					"button_mappings": [{
						"from_button_id": "button.menu_cancel",
						"to_button_id": "button.menu_exit",
						"mapping_type": "global"
					}]
				}
			}
		}]
	}
}